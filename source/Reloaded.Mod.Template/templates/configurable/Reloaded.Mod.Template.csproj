<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net5.0-windows</TargetFramework>
    <AppendTargetFrameworkToOutputPath>false</AppendTargetFrameworkToOutputPath>
    <CopyLocalLockFileAssemblies>true</CopyLocalLockFileAssemblies>
    <LangVersion>preview</LangVersion>
    <Nullable>enable</Nullable>
    <AllowUnsafeBlocks>True</AllowUnsafeBlocks>
    <OutputPath>$(RELOADEDIIMODS)/Reloaded.Mod.Template</OutputPath>

    <!-- IL Trimming Support forked from https://github.com/space-wizards/RobustToolbox, under the MIT License -->
    <!-- Trimming is enabled when you publish the mod. Test it using 
         `dotnet publish <PROJECT_PATH> -c Release -o "$env:RELOADEDIIMODS/Reloaded.Mod.Template" /p:OutputPath="./bin/Release"` 
         in PowerShell. -->
    <RobustILLink>false</RobustILLink>
  </PropertyGroup>

  <ItemGroup>
    <RobustLinkRoots Include="Reloaded.Mod.Template" />
    <!-- Add assemblies to be trimmed  -->
    <!-- <RobustLinkAssemblies Include="Reloaded.Memory" /> -->
  </ItemGroup>

  <Import Project="Robust.Trimming.targets" />

  <ItemGroup>
    <None Remove="ModConfig.json" />
    <None Remove="Preview.png" />
    <None Remove="Publish.ps1" />
  </ItemGroup>

  <ItemGroup>
    <Content Include="ModConfig.json">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </Content>
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Reloaded.Mod.Interfaces" Version="2.1.0" />
    <PackageReference Include="Reloaded.SharedLib.Hooks" Version="1.9.0" />
  </ItemGroup>

</Project>
