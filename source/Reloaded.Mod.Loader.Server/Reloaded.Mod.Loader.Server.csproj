<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net5.0</TargetFramework>
	  <Version>2.0.0</Version>
	  <GenerateDocumentationFile>true</GenerateDocumentationFile>
	  <NoWarn>1701;1702;CS1591;NU5104</NoWarn>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
	  <Authors>Sewer56</Authors>
	  <Company />
	  <Description>Contains code for communicating remotely with Reloaded-II's Mod Loader when loaded inside a remote process. Allows for querying information as well as load/unload/resume/suspend of mods in real time. This is an "internal" package; no documentation is provided and the API can change at any time.</Description>
	  <PackageLicenseFile>LICENSE.md</PackageLicenseFile>
	  <PackageProjectUrl>https://github.com/Reloaded-Project/Reloaded-II</PackageProjectUrl>
	  <RepositoryUrl>https://github.com/Reloaded-Project/Reloaded-II</RepositoryUrl>
	  <RepositoryType>git</RepositoryType>
	  <PackageRequireLicenseAcceptance>true</PackageRequireLicenseAcceptance>
    <LangVersion>preview</LangVersion>
    <Deterministic>true</Deterministic>
    <PackageIcon>NuGet-Icon.png</PackageIcon>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="LiteNetLib" Version="1.0.0-rc.3" />
  </ItemGroup>
	
  <ItemGroup>
	<None Include="..\..\LICENSE.md">
	  <Pack>True</Pack>
	  <PackagePath></PackagePath>
    </None>
	<None Include="..\NuGet-Icon.png">
	  <Pack>True</Pack>
	  <PackagePath>\</PackagePath>
	</None>
  </ItemGroup>
	
  <ItemGroup>
    <ProjectReference Include="..\Submodules\Reloaded.Messaging\Source\Reloaded.Messaging.Serializer.ReloadedMemory\Reloaded.Messaging.Serializer.ReloadedMemory.csproj" />
    <ProjectReference Include="..\Submodules\Reloaded.Messaging\Source\Reloaded.Messaging.Serializer.SystemTextJson\Reloaded.Messaging.Serializer.SystemTextJson.csproj" />
